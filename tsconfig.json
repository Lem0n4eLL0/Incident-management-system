{
  "compilerOptions": {
    "target": "es5",
    "baseUrl": "src",
    "outDir": "dist",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "paths": {
      "@components/*": ["components/*"],
      "@utils/*": ["utils/*"],
      "@layout/*": ["layout/*"],
      "@pages/*": ["pages/*"],
      "@services/*": ["services/*"],
      "@ui/*": ["components/ui/*"],
      "@custom-types/*": ["types/*"],
      "@constants/*": ["constants/*"],
      "@api/*": ["api/*"],
      "@style/*": ["style/*"],
      "@hooks/*": ["hooks/*"],
      "@assets/*": ["assets/*"]
    }
  },
  "include": ["src"]
}
